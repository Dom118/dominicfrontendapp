@page "/login"
@inject NavigationManager NavManager
@inject IConfiguration Configuration

PageTitle>Login</PageTitle>
<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm" style="max-width: 400px; width: 100%;">
        <div class="card-body text-center">
            <h3 class="card-title mb-4">Login with GitHub</h3>
            <button class="btn btn-dark d-flex align-items-center justify-content-center mx-auto" @onclick="LoginWithGitHub">
                <!-- Placeholder for GitHub Logo -->
                <span style="width: 24px; height: 24px; margin-right: 10px;">
                    <img src="https://domsa.blob.core.windows.net/product-images/github.png" alt="GitHub" style="width: 100%; height: 100%;" /> -->
                </span>
               Sign In with GitHub
            </button>
        </div>
    </div>
</div>

<button @onclick="LoginWithGitHub">Sign In</button>

@code {
    private void LoginWithGitHub()
    {
        var apiBaseUrl = Configuration["ApiBaseUrl"];
        NavManager.NavigateTo($"{apiBaseUrl}/auth/login", forceLoad: true);
    }
}